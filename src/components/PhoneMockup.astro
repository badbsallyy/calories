<section class="pb-24 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="relative flex justify-center">
      <!-- Phone Frame -->
      <div class="relative w-[340px] h-[680px] bg-zinc-950 rounded-[3.5rem] p-3 shadow-2xl border-[6px] border-zinc-800 ring-1 ring-zinc-900/5 z-20">
        <!-- Dynamic Island -->
        <div class="absolute top-6 left-1/2 -translate-x-1/2 w-28 h-8 bg-black rounded-full z-30"></div>
        
        <!-- Screen Content -->
        <div class="w-full h-full bg-zinc-50 rounded-[2.8rem] overflow-hidden relative flex flex-col">
          <!-- Camera/Header -->
          <div class="h-full relative">
            <!-- Background Image Simulation -->
            <div class="absolute inset-0 bg-zinc-200">
              <div class="w-full h-full opacity-30" style="background-image: radial-gradient(#a1a1aa 1px, transparent 1px); background-size: 20px 20px;"></div>
              <!-- Abstract Food Item -->
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-orange-100 rounded-full blur-xl opacity-80"></div>
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[80px]">ðŸ¥ª</div>
            </div>
            
            <!-- Scanner UI -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-64 h-64 border-2 border-white/60 rounded-3xl relative">
                <div class="absolute inset-x-0 top-1/2 h-0.5 bg-orange-500 shadow-[0_0_15px_rgba(249,115,22,0.8)] animate-[pulse_2s_infinite]"></div>
                <!-- Corners -->
                <div class="absolute -top-1 -left-1 w-6 h-6 border-t-4 border-l-4 border-white rounded-tl-xl"></div>
                <div class="absolute -top-1 -right-1 w-6 h-6 border-t-4 border-r-4 border-white rounded-tr-xl"></div>
                <div class="absolute -bottom-1 -left-1 w-6 h-6 border-b-4 border-l-4 border-white rounded-bl-xl"></div>
                <div class="absolute -bottom-1 -right-1 w-6 h-6 border-b-4 border-r-4 border-white rounded-br-xl"></div>
              </div>
            </div>

            <!-- Bottom Card -->
            <div class="absolute bottom-6 left-4 right-4 bg-white/95 backdrop-blur-md p-5 rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] border border-white/20">
              <div class="flex items-center justify-between mb-2">
                <h3 class="font-semibold text-zinc-900 text-lg">Club Sandwich</h3>
                <div class="bg-green-100 text-green-700 px-2.5 py-0.5 rounded-full text-[11px] font-bold uppercase tracking-wide">Verified</div>
              </div>
              <div class="flex items-baseline gap-1 mb-4">
                <span class="text-3xl font-bold text-zinc-900 tracking-tight">540</span>
                <span class="text-zinc-500 font-medium text-sm">kcal</span>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-4">
                <div class="bg-zinc-50 rounded-xl p-2 text-center border border-zinc-100">
                  <div class="text-[10px] text-zinc-400 font-medium uppercase">Carbs</div>
                  <div class="text-sm font-semibold text-zinc-900">45g</div>
                </div>
                <div class="bg-zinc-50 rounded-xl p-2 text-center border border-zinc-100">
                  <div class="text-[10px] text-zinc-400 font-medium uppercase">Prot</div>
                  <div class="text-sm font-semibold text-zinc-900">28g</div>
                </div>
                <div class="bg-zinc-50 rounded-xl p-2 text-center border border-zinc-100">
                  <div class="text-[10px] text-zinc-400 font-medium uppercase">Fat</div>
                  <div class="text-sm font-semibold text-zinc-900">18g</div>
                </div>
              </div>
              <button class="w-full bg-zinc-900 text-white font-medium py-3 rounded-xl text-sm">Log Meal</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
