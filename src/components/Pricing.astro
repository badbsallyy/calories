<section id="pricing" class="py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-semibold tracking-tight text-zinc-900 mb-6">Simple pricing</h2>
      <p class="text-xl text-zinc-500">Start free, go pro when you're ready. No limits, no pressure.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto items-center">
      
      <!-- Free -->
      <div class="p-8 rounded-[2rem] bg-zinc-50 border border-zinc-200 hover:border-zinc-300 transition-colors">
        <div class="flex justify-between items-start mb-8">
          <div>
            <h3 class="text-lg font-semibold text-zinc-900">Basic</h3>
            <p class="text-sm text-zinc-500 mt-1">For casual tracking</p>
          </div>
          <span class="bg-white border border-zinc-200 text-zinc-600 px-3 py-1 rounded-full text-xs font-semibold shadow-sm">Free</span>
        </div>
        <div class="flex items-baseline gap-1 mb-8">
          <span class="text-5xl font-bold tracking-tight text-zinc-900">$0</span>
          <span class="text-zinc-500">/mo</span>
        </div>
        <ul class="space-y-4 mb-8">
          <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Food logging
          </li>
          <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Standard Database
          </li>
           <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Water tracking
          </li>
        </ul>
        <button class="w-full py-4 rounded-xl border border-zinc-200 bg-white text-zinc-900 font-semibold text-sm hover:bg-zinc-50 transition-colors shadow-sm">Get Started</button>
      </div>

      <!-- Pro (Black) -->
      <div class="p-10 rounded-[2.5rem] bg-zinc-900 text-white shadow-2xl shadow-zinc-400/20 relative transform md:-translate-y-4">
         <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-gradient-to-r from-orange-500 to-red-500 text-white px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider shadow-lg">Most Popular</div>
        
         <div class="flex justify-between items-start mb-8">
          <div>
            <h3 class="text-xl font-semibold text-white">Pro</h3>
            <p class="text-sm text-zinc-400 mt-1">For serious goals</p>
          </div>
        </div>
        <div class="flex items-baseline gap-1 mb-8">
          <span class="text-6xl font-bold tracking-tight text-white">$9</span>
          <span class="text-zinc-500">/mo</span>
        </div>
        <ul class="space-y-4 mb-10">
          <li class="flex items-center gap-3 text-sm text-zinc-300">
            <div class="w-5 h-5 rounded-full bg-orange-500 flex items-center justify-center flex-shrink-0 text-white"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Everything in Basic
          </li>
          <li class="flex items-center gap-3 text-sm text-zinc-300">
            <div class="w-5 h-5 rounded-full bg-orange-500 flex items-center justify-center flex-shrink-0 text-white"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            AI Food Scanner
          </li>
          <li class="flex items-center gap-3 text-sm text-zinc-300">
            <div class="w-5 h-5 rounded-full bg-orange-500 flex items-center justify-center flex-shrink-0 text-white"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Macro Analysis
          </li>
          <li class="flex items-center gap-3 text-sm text-zinc-300">
            <div class="w-5 h-5 rounded-full bg-orange-500 flex items-center justify-center flex-shrink-0 text-white"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            No Ads
          </li>
        </ul>
        <button class="w-full py-4 rounded-xl bg-orange-500 text-white font-semibold text-sm hover:bg-orange-600 transition-colors shadow-lg shadow-orange-500/25">Start Free Trial</button>
      </div>

      <!-- Gold -->
      <div class="p-8 rounded-[2rem] bg-zinc-50 border border-zinc-200 hover:border-zinc-300 transition-colors">
        <div class="flex justify-between items-start mb-8">
          <div>
            <h3 class="text-lg font-semibold text-zinc-900">Coaching</h3>
            <p class="text-sm text-zinc-500 mt-1">For total control</p>
          </div>
          <span class="bg-white border border-zinc-200 text-zinc-600 px-3 py-1 rounded-full text-xs font-semibold shadow-sm">Gold</span>
        </div>
        <div class="flex items-baseline gap-1 mb-8">
          <span class="text-5xl font-bold tracking-tight text-zinc-900">$29</span>
          <span class="text-zinc-500">/mo</span>
        </div>
        <ul class="space-y-4 mb-8">
          <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Everything in Pro
          </li>
          <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            1-on-1 Chat
          </li>
           <li class="flex items-center gap-3 text-sm text-zinc-600">
            <div class="w-5 h-5 rounded-full bg-zinc-200 flex items-center justify-center flex-shrink-0"><span class="iconify" data-icon="lucide:check" data-width="12"></span></div>
            Personalized Plans
          </li>
        </ul>
        <button class="w-full py-4 rounded-xl border border-zinc-200 bg-white text-zinc-900 font-semibold text-sm hover:bg-zinc-50 transition-colors shadow-sm">Contact Sales</button>
      </div>
    </div>
  </div>
</section>
